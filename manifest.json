{
  "manifest_version": 3,
  "name": "InstaHistogram",
  "version": "1.0",
  "description": "Professional real-time RGB histogram and color sampling for Instagram photos. Perfect for photographers and designers.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "InstaHistogram - Professional Photography Tool"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["*.js", "*.css", "*.png"],
      "matches": ["*://*.instagram.com/*"]
    }
  ],
  "homepage_url": "https://github.com/YableZhao/instahistogram",
  "author": "YableZhao"
}
